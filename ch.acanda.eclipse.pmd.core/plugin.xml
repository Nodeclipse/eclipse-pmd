<?eclipse version="3.4"?>
<plugin>

   <extension
         id="ch.acanda.eclipse.pmd.builder.PMDBuilder"
         name="PMD Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="true"
            hasNature="true">
         <run
               class="ch.acanda.eclipse.pmd.builder.PMDBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="ch.acanda.eclipse.pmd.builder.PMDNature"
         name="PMD Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="ch.acanda.eclipse.pmd.builder.PMDNature">
         </run>
      </runtime>
      <builder
            id="ch.acanda.eclipse.pmd.builder.PMDBuilder">
      </builder>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
   </extension>
   <extension
         id="pmdMarker"
         name="PMD Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerImageProviders">
      <imageprovider
            icon="/icons/warning.gif"
            id="ch.acanda.eclipse.pmd.core.imageprovider.pmdMarker"
            markertype="ch.acanda.eclipse.pmd.core.pmdMarker">
      </imageprovider>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="ch.acanda.eclipse.pmd.properties.PMDProjectPropertyPage"
            id="ch.acanda.eclipse.pmd.properties.PMDProjectPropertyPage"
            name="PMD"
            nameFilter="*">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
            </adapt>
         </enabledWhen>
      </page>
   </extension>

</plugin>
